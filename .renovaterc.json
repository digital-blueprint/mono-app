{
    "extends": ["config:recommended", "group:allNonMajor", "schedule:monthly", ":automergePatch"],
    "rangeStrategy": "update-lockfile",
    "lockFileMaintenance": {
        "enabled": true
    },
    "cloneSubmodules": true,
    "packageRules": [
        {
          "matchPackageNames": ["@open-wc/scoped-elements"],
          "allowedVersions": "<3"
        },
        {
            "matchPackageNames": ["rollup-plugin-serve"],
            "allowedVersions": "<3"
        }
    ]
}
